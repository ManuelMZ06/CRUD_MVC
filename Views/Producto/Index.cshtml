@* @model List<MiPrimerAppMVC.Models.Producto> *@
@model IEnumerable<MiPrimerAppMVC.Models.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">Agregar nuevo producto</a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-hover table-striped table-bordered mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Precio)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Activo)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FechaDeAlta)</th>
                        <th class="text-center">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var producto in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => producto.Id)</td>
                            <td>@Html.DisplayFor(modelItem => producto.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => producto.Descripcion)</td>
                            <td>$@Html.DisplayFor(modelItem => producto.Precio)</td>
                            <td>
                                @if (producto.Activo)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                            </td>
                            <td>@producto.FechaDeAlta.ToShortDateString()</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@producto.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                                <a asp-action="Delete" asp-route-id="@producto.Id" class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
