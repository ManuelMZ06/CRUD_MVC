@model MiPrimerAppMVC.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-5">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">¿Estás seguro que deseas eliminar este producto?</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Precio)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Precio)</dd>
            </dl>

            <form asp-action="Delete" method="post">
                @Html.HiddenFor(model => model.Id)

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>
